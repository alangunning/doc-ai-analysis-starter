# Default overrides; credentials such as GITHUB_TOKEN should be set in your environment

# Docs site configuration
DOCS_SITE_URL=https://alangunning.github.io
DOCS_BASE_URL=/doc-ai-analysis-starter/
GITHUB_ORG=alangunning
GITHUB_REPO=doc-ai-analysis-starter

# Formats produced by `scripts/convert.py` (comma-separated)
OUTPUT_FORMATS=markdown,html,json,text,doctags

# Optional model overrides
PR_REVIEW_MODEL=gpt-4.1
# VALIDATE_MODEL=gpt-4.1
# ANALYZE_MODEL=gpt-4.1
# EMBED_MODEL=openai/text-embedding-3-small
# EMBED_DIMENSIONS=1536
# Default base URL for text-only steps
BASE_MODEL_URL=https://models.github.ai/inference

# Validation uses OpenAI's Responses API
VALIDATE_BASE_MODEL_URL=https://api.openai.com/v1
VALIDATE_MODEL=gpt-4o-mini

# Set to 'true' to disable all GitHub Actions automation
DISABLE_ALL_WORKFLOWS=false

# Set individual workflows to 'true' to enable them
ENABLE_CONVERT_WORKFLOW=true
ENABLE_VALIDATE_WORKFLOW=true
ENABLE_VECTOR_WORKFLOW=true
ENABLE_PROMPT_ANALYSIS_WORKFLOW=true
ENABLE_PR_REVIEW_WORKFLOW=true
ENABLE_AUTO_MERGE_WORKFLOW=true
ENABLE_DOCS_WORKFLOW=true
ENABLE_LINT_WORKFLOW=true
